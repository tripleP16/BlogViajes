<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>     
    <script src="javascripts/script.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="icon" href="assets/logo.png" />
    <link rel="stylesheet" href="stylesheets/estilos.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Akaya+Telivigala&display=swap" rel="stylesheet">
    <title>Me voy de viaje</title>
</head>
<body>
   <%- include("./partials/encabezadoPublico.ejs")%>
   <br>
    <h3 class="center white-text text-darken-2 titulo">Publicaciones Recientes</h3>
    <div class="row contenedor">
        
          <form class="col s12 white" action="/">
            <div class="row">
              <div class="input-field col s7 m8 l10">
                <i class="material-icons prefix">search</i>
                <input id="busqueda" type="text" name="busqueda" class="validate" placeholder="Buscar una Publicacion">
              </div>
              <div class="input-field col s5 m4 l2">
                  <button class="btn-large waves-effect teal darken-4" type="submit" name="action">Buscar
                  <i class="material-icons right">search</i>
                </button>
              </div>
            </form>
          </div>
        <% data.forEach(dato => { %>
        <div class="col s12 m6 l6">
            <div class="card brown darken-2">
              <div class="card-content white-text">
                <span class="card-title titulo"><strong><%= dato.titulo %></strong></span>
                <p><%= dato.resumen %></p>
                <p><% if(dato.avatar && dato.avatar !="") { %>
                      <img src="avatars/<%=dato.avatar %>" alt="" class="avatar">
                    <% }else{ %>
                    <i class="tiny left material-icons">person</i> 
                    <%}%>
                    <%= dato.pseudonimo %>
                    <br>
                    <i class="tiny left material-icons">date_range</i><%= dato.fecha_hora.getFullYear() %>/<%= dato.fecha_hora.getMonth()+1 %>/<%= dato.fecha_hora.getDate() %>
                </p>
              </div>
              <div class="card-action">
                <a><i class="small left material-icons">favorite</i><%= dato.votos %></a>  
                <a href="/publicacion/<%=dato.id%>"><i class="small left material-icons">details</i></a>             
              </div>
            </div>
          </div>
          <% }) %>
          
                    
    </div>
    <ul class="pagination white center">
      <li class="waves-effect"><a href="/?pagina=<%=pagina-1%>"><i class="material-icons">chevron_left</i></a></li>
      <li class="waves-effect"><a href="/?pagina=<%=pagina+1%>"><i class="material-icons">chevron_right</i></a></li>
    </ul>
    
    <%- include("./partials/footer.ejs")%>
</body>
</html>